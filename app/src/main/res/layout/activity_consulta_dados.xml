<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="12dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/colorPrimaryText"
                    android:text="Data inicial do período"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/dataInicialET"
                    android:inputType="date"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_primaryColor="@color/colorAccent"
                    app:met_floatingLabel="highlight"
                    app:met_minCharacters="10"
                    app:met_maxCharacters="10"
                    android:hint="dd/mm/aaaa"/>

                <TextView
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/colorPrimaryText"
                    android:text="Data final do período"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/dataFinalET"
                    android:inputType="date"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="16sp"
                    app:met_minCharacters="10"
                    app:met_maxCharacters="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_primaryColor="@color/colorAccent"
                    app:met_floatingLabel="highlight"
                    android:hint="dd/mm/aaaa"/>

                <TextView
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/colorPrimaryText"
                    android:text="Informação desejada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/informacaoDesejadaSPN"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <info.hoang8f.widget.FButton
                    android:padding="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Consultar"
                    android:onClick="buscarDados"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/branco"
                    fbutton:buttonColor="@color/colorPrimary"
                    fbutton:shadowColor="@color/colorPrimaryDark" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
